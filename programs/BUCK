    "python",
]

python_library(
    name = "bucklib",
    srcs = [
        "buck_logging.py",
        "buck_package.py",
        "buck_project.py",
        "buck_repo.py",
        "buck_tool.py",
        "file_locks.py",
        "java_lookup.py",
        "timing.py",
        "tracing.py",
    ],
    resources = dicts.add(
        BUCK_RESOURCES,
        convert_modules_to_resources(BUCK_MODULES),
        convert_modules_to_external_resources(BUCK_MODULES, BUCK_MODULES_WITH_RESOURCES),
    ),
    deps = [
        ":buck_version",
        ":subprocutils",
        "//third-party/nailgun:ng",
    ],
)

# Simple container libs to hold the resources needed to identify buck's version
python_library(
    name = "buck_committed_version",
    srcs = [],
    resources = {RESOURCES_VERSION_INFO_NAME: ":gen_buck_package_info"},
)

# Container lib to allow wrapper to detect features about a buck.pex
#
# Format (RFC 5234) that is easy to use in shell scripts
#   buck_wrapper_info = *(flag-clause LF) [LF]
#   flag-clause = "~" flag "~" flag_opts
#   flag = 1*(ALPHA / DIGIT / "_")
#   flag-opts = *(vchar-tilde)
#   vchar-tilde = %x21-7D ; VCHAR - "~"
python_library(
    name = "buck_wrapper_info",
    srcs = [],
    resources = {"buck_wrapper_info": "buck_wrapper_info.txt"},
)

python_binary(
    name = "buck",
    build_args = interpreter_override_args(),
    main = "buck.py",
    visibility = [
        "//buck_e2e/...",
        "//scripts/...",
        "//test/...",
        "//tools/...",
    ],
    deps = [
        ":buck_committed_version",
        ":buck_wrapper_info",
        ":bucklib",
        ":java_version",
        ":subprocutils",
    ],
)

python_test(
    name = "test",
    srcs = glob(["test_*.py"]),
    deps = [
        ":buck_wrapper_info",
        ":bucklib",
        ":subprocutils",
    ],
)

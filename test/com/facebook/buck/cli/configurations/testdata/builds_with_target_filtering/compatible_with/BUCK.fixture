config_setting(
    name = "linux",
    constraint_values = [
        "buck//config/constraints:linux",
    ],
)

config_setting(
    name = "osx-x86_64",
    constraint_values = [
        "buck//config/constraints:osx",
        "buck//config/constraints:x86_64",
    ],
)

genrule(
    name = "cat_on_linux",
    srcs = [
        "b.txt",
    ],
    out = "cat_out.txt",
    cmd = "cat $SRCS > $OUT",
    cmd_exe = "type $SRCS > $OUT",
    compatible_with = [
        ":linux",
    ],
)

genrule(
    name = "cat_on_osx",
    srcs = [
        "a.txt",
    ],
    out = "cat_out.txt",
    cmd = "cat $SRCS > $OUT",
    cmd_exe = "type $SRCS > $OUT",
    compatible_with = [
        ":osx-x86_64",
    ],
)

genrule(
    name = "constrained_select",
    out = select({
        ":osx-x86_64": "a.txt",
    }),
    cmd = "echo lol > $OUT",
    compatible_with = [
        ":osx-x86_64",
    ],
)

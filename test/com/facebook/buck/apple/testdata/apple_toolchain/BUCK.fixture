apple_bundle(
    name = "TestApp",
    binary = ":TestAppBinary",
    extension = "app",
    info_plist = "Info.plist",
)

apple_binary(
    name = "TestAppBinary",
    deps = [":TestLib"],
    frameworks = [
        "$SDKROOT/Frameworks/Foundation.framework",
        "$SDKROOT/Frameworks/UIKit.framework",
    ],
    libraries = [
        "$SDKROOT/lib/libobjc.dylib",
    ],
    preprocessor_flags = ["-fobjc-arc"],
)

apple_library(
    name = "TestLib",
    srcs = [
        "src_a.c",
        "src_b.c",
    ],
    headers = [
        "header.h",
    ],
)

apple_binary(
    name = "TestSwiftBinary",
    frameworks = [
        "$SDKROOT/Frameworks/Foundation.framework",
    ],
    deps = [":SwiftLibrary"],
)

swift_library(
    name = "SwiftLibrary",
    srcs = ["main.swift"],
    deps = [":AnotherSwiftLibrary"],
)

swift_library(
    name = "AnotherSwiftLibrary",
    srcs = ["extra.swift"],
)

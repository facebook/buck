swift_library(
  name = 'dep1',
  srcs = ['dep1/echo.swift']
)

apple_binary(
  name = 'TestApp',
  srcs = [ 'swift_test/AppDelegate.swift' ],
  deps = [ ':dep1' ],
  frameworks = [
    '$SDKROOT/System/Library/Frameworks/UIKit.framework',
    '$SDKROOT/System/Library/Frameworks/Foundation.framework',
  ],
)

apple_bundle(
    name='TestBundle',
    binary=':TestApp',
    extension='app',
    info_plist='swift_test/Info.plist',
    info_plist_substitutions={
        'PRODUCT_BUNDLE_IDENTIFIER': 'com.uber.swifttest'
    }
)

apple_test(
  name = 'MixedTest',
  info_plist = 'swift_testTests/Info.plist',
  info_plist_substitutions = {
    'PRODUCT_BUNDLE_IDENTIFIER': 'com.ubercab.swiftunittest',
  },
  srcs = [
    'swift_testTests/DummyTest.m',
    'swift_testTests/test_withdep.swift',
    'swift_testTests/test_nodep.swift',
  ],
  deps = [ ':dep1' ],
  frameworks = [
      '$SDKROOT/System/Library/Frameworks/Foundation.framework',
      '$PLATFORM_DIR/Developer/Library/Frameworks/XCTest.framework'
  ],
)

rust_binary(
  name = "xyzzy",
  srcs = [
    "main.rs",
  ],
)

rust_binary(
  name = "xyzzy_flags",
  rustc_flags = [ '--this-is-a-bad-option' ],
  srcs = [
    "main.rs",
  ],
)

rust_binary(
  name = "xyzzy_aliased",
  crate = "xyzzy",
  srcs = [
    "main.rs",
  ],
)

genrule(
  name = 'generated_linker',
  srcs = [ 'linker.sh' ],
  out = 'generated_linker.sh',
  executable = True,
  bash = 'cp linker.sh $OUT; chmod +x $OUT',
)

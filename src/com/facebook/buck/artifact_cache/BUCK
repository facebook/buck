  ],
  autodeps = True,
  visibility = [
    '//src/com/facebook/buck/httpserver:cache_handler',
  ],
)

java_immutables_library(
  name = 'impl',
  srcs = glob(['*.java'],
              excludes=PUBLIC_API_SOURCES + PUBLIC_API_IMMUTABLES + \
                       CONFIG_SOURCES + PROTOCOL_SOURCES),

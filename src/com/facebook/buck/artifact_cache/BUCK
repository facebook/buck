]

java_immutables_library(
  name = 'artifact_cache',
  srcs = PUBLIC_API_SOURCES,
  immutable_srcs = PUBLIC_API_IMMUTABLES,
  tests = [
    '//test/com/facebook/buck/artifact_cache:artifact_cache',
  ],
  autodeps = True,
  visibility = [
    'PUBLIC',
  ],
)


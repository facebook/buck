    '//test/com/facebook/buck/artifact_cache:artifact_cache',
  ],
  autodeps = True,
  exported_deps = [
    '//src/com/facebook/buck/artifact_cache:binary_protocol',
    '//src/com/facebook/buck/artifact_cache:artifact_cache',
  ],
  visibility = [
    '//test/com/facebook/buck/artifact_cache/...',
  ],
)


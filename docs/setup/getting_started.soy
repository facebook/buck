<script>
// Convert <div>...<span><block /></span>...</div>
// Into <div>...<block />...</div>
var blocks = document.getElementsByTagName('block');
for (var i = 0; i < blocks.length; ++i) {lb}
  var block = blocks[i];
  var span = blocks[i].parentNode;
  var container = span.parentNode;
  container.insertBefore(block, span);
  container.removeChild(span);
{rb}
// Convert <div>...<block />content<block />...</div>
// Into <div>...<block>content</block><block />...</div>
blocks = document.getElementsByTagName('block');
for (var i = 0; i < blocks.length; ++i) {lb}
  var block = blocks[i];
  while (block.nextSibling && block.nextSibling.tagName !== 'BLOCK') {lb}
    block.appendChild(block.nextSibling);
  {rb}
{rb}
function display(type, value) {lb}
  var container = document.getElementsByTagName('block')[0].parentNode;
  container.className = 'display-' + type + '-' + value + ' ' +
    container.className.replace(RegExp('display-' + type + '-[a-z]+ ?'), '');
{rb}

// If we are coming to the page with a hash in it (i.e. from a search, for example), try to get
// us as close as possible to the correct platform and dev os using the hashtag and block walk up.
var foundHash = false;
if (window.location.hash !== '' && window.location.hash !== 'content') {lb} // content is default
  var hashLinks = document.querySelectorAll('a.hash-link');
  for (var i = 0; i < hashLinks.length && !foundHash; ++i) {lb}
    if (hashLinks[i].hash === window.location.hash) {lb}
      var parent = hashLinks[i].parentElement;
      while (parent) {lb}
        if (parent.tagName === 'BLOCK') {lb}
          var devOS = null;
          var targetPlatform = null;
          // Could be more than one target os and dev platform, but just choose some sort of order
          // of priority here.

          // Dev OS
          if (parent.className.indexOf('mac') > -1) {lb}
            devOS = 'mac';
          {rb} else if (parent.className.indexOf('linux') > -1) {lb}
            devOS = 'linux';
          {rb} else if (parent.className.indexOf('windows') > -1) {lb}
            devOS = 'windows';
          {rb} else {lb}
            break; // assume we don't have anything.
          {rb}

          // Target Platform
          if (parent.className.indexOf('ios') > -1) {lb}
            targetPlatform = 'ios';
          {rb} else if (parent.className.indexOf('android') > -1) {lb}
            targetPlatform = 'android';
          {rb} else {lb}
            break; // assume we don't have anything.
          {rb}
          // We would have broken out if both targetPlatform and devOS hadn't been filled.
          display('os', devOS);
          display('platform', targetPlatform);
          foundHash = true;
          break;
        {rb}
        parent = parent.parentElement;
      {rb}
    {rb}
  {rb}
{rb}
// Do the default if there is no matching hash
if (!foundHash) {lb}
  var isMac = navigator.platform === 'MacIntel';
  var isWindows = navigator.platform === 'Win32';
  display('os', isMac ? 'mac' : (isWindows ? 'windows' : 'linux'));
  display('platform', isMac ? 'ios' : 'android');
{rb}
</script>

